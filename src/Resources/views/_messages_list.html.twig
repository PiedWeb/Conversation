{% for message in messages %}
<div class="mt-3 mb-3 p-3 shadow {{ loop.index is odd ? 'bg-light' : '' }}">
    <div class="card-body">
        {{ message.content|markdown }}
        <footer class="blockquote-footer">Message posté le
            {{ message.createdAt|date('d/m/Y à H:i') }}
            {{ message.authorName ? 'par ' ~ message.authorName : '' }}
        </footer>
    </div>
</div>
{% endfor %}